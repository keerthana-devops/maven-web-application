node
{

 def notifyBuild(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
    
 def  mavenHome = tool name: "Maven3.8.4"
 stage('CheckoutCode')
 {
 git branch: 'development', credentialsId: 'ed41196f-23a1-46b8-b79a-d1d96364dc4f', url: 'https://github.com/keerthana-devops/maven-web-application.git'
 }

 stage('Build'){
 sh "${mavenHome}/bin/mvn clean package"
 }
 /*
 stage('SendNotification'){
emailext body: '''Build over...


Regards,
Kirtz''', subject: 'Build over...', to: 'keerthana574@gmail.com'
}
*/	

notifyBuild(currentBuild.result)

}
